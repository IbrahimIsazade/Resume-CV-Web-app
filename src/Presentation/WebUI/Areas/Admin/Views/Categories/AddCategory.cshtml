@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Services.Categories;
@model AddCategoryRequestDto;
@{
    ViewData["Title"] = "Add category";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between pb-0">
                    <h6>Add category</h6>
                </div>
                <form method="post" class="card-body p-3 pb-2">
                    <div class="input-group mb-3">
                        <input asp-for="Name" type="text" class="form-control" placeholder="Name" aria-describedby="button-addon2">
                        <input type="submit" class="btn bg-gradient-info font-weight-bold text-xs mb-0" id="button-addon2" value="Add">
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div> 
                </form>
            </div>
        </div>
    </div>
</div>

